<div class="form">
  <%= form_for [@job.employer, @job] do |f| %>
    <%= f.label :title %><br/>
    <%= f.text_field :title %><br/>
    <%= f.label :description %><br/>
    <%= f.text_area :description %><br/>
    <%= f.label :full_address %><br/>
    <%= f.text_field :full_address %><br/>
    <%= f.submit %>
  <% end %>
